# PostgreSQL Database Connection (REQUIRED)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/skill_dna

# Azure OpenAI Configuration (for embeddings and insights)
# These will be provided by Å koda at the hackathon
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here

# Optional: Gemini API (fallback for insights if Azure unavailable)
GEMINI_API_KEY=your-gemini-api-key-here

# Comma-separated CORS origins (add your Vercel domain here)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-vercel-domain.vercel.app
