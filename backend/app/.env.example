LLM_API_URL=https://your-deployment.openai.azure.com/openai/deployments/your-model/chat/completions

LLM_API_KEY=your-api-key-here

LLM_API_VERSION=2024-02-15-preview

LLM_MODEL_NAME=gpt-4


# Sampling temperature (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.7

# Context window size
LLM_CONTEXT_SIZE=4096

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ==============================================================================
# DATA PATHS (Usually don't need to change these)
# ==============================================================================

# These use the persistent volume mount in containers
RAW_XLSX_DIR=/app/persistent_data/raw_xlsx
CLEAN_PARQUET_DIR=/app/persistent_data/clean_parquet
MODELS_DIR=/app/persistent_data/models
GRAPH_STATE_PATH=/app/persistent_data/state/skill_graph.pkl

# ==============================================================================
# EXCEL SHEET NAMES (Adjust if your files differ)
# ==============================================================================

# Sheet names in Skill_mapping.xlsx
SKILL_MAPPING_SHEET=Mapping
SKILL_MAPPING_SKILLS_SHEET=Skills
SKILL_MAPPING_ELEARNING_SHEET=eLearnings
SKILL_MAPPING_COURSES_SHEET=Kurzy_kompetence