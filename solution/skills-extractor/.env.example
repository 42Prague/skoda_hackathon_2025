# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=google/gemini-2.5-flash-exp:free

# Neo4j Configuration
# For local development (running Python directly): use localhost
# For Docker Compose: NEO4J_URI is automatically set to bolt://neo4j:7687
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=skillspassword
NEO4J_DATABASE=neo4j

# LLM Extraction Settings
LLM_BATCH_SIZE=50
LLM_MAX_CONCURRENT=50
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3

# Skill Normalization Settings
CLUSTERING_EPS=0.15
CLUSTERING_MIN_SAMPLES=2
SEMANTIC_SIMILARITY_THRESHOLD=0.85
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# API Settings
API_HOST=0.0.0.0
API_PORT=8002
API_WORKERS=4

# Data Settings
DATA_DIR=./data
CHECKPOINT_DIR=./data/checkpoints
CACHE_DIR=./data/cache
