# ŠKODA AI Skill Coach - Environment Variables
# Minimum configuration for Docker

# Application
PROJECT_NAME=ŠKODA AI Skill Coach
ENVIRONMENT=production
LOG_LEVEL=INFO
ROUTE_PREFIX=/api

VITE_API_BASE_URL=

# Database (REQUIRED)
DATABASE_TYPE=postgres
DB_HOST=db
DB_PORT=5432
DB_USER=swx_user
DB_PASSWORD=changeme
DB_NAME=swx_db
DOCKERIZED=true

# TONE Format
USE_TONE=false
VALIDATION_MODE=false

# LLM (set at least one API key)
OPENAI_API_KEY=
FEATHERLESS_API_KEY=
OLLAMA_ENDPOINT=http://ollama:11434/v1
OLLAMA_MODEL=llama3.1


# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=changeme-in-production-use-strong-random-key
REFRESH_SECRET_KEY=changeme-in-production-use-strong-random-key

# CORS
BACKEND_HOST=http://localhost:8000
FRONTEND_HOST=http://localhost:5173
BACKEND_CORS_ORIGINS=*

# Ports
BACKEND_PORT=8000
DB_PORT=5432
ADMINER_PORT=8080
PGADMIN_PORT=5050
OLLAMA_PORT=11434

SKILL_LLM_PROVIDER=azure
ENABLE_AI_ORCHESTRATOR=true
ENABLE_AI_AUDIT_LOGGING=true

AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=
AZURE_OPENAI_DEPLOYMENT_NAME=
AZURE_OPENAI_API_KEY=
DEMO_API_TOKEN=test-token-12345
