# ŠKODA AI Skill Coach - Environment Variables Template
# Copy this file to .env or docker-compose.yml environment section

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql+asyncpg://swx_user:changeme@db:5432/swx_db
SQLALCHEMY_DATABASE_URI=postgresql+psycopg://swx_user:changeme@db:5432/swx_db
SQLALCHEMY_ASYNC_DATABASE_URI=postgresql+asyncpg://swx_user:changeme@db:5432/swx_db
DB_HOST=db
DB_PORT=5432
DB_USER=swx_user
DB_PASSWORD=changeme
DB_NAME=swx_db
DATABASE_TYPE=postgres
DOCKERIZED=true

# ============================================================================
# Application Configuration
# ============================================================================
ENVIRONMENT=local
LOG_LEVEL=info
PROJECT_NAME=ŠKODA AI Skill Coach
ROUTE_PREFIX=/api
BACKEND_HOST=http://localhost:8000
FRONTEND_HOST=http://localhost:5173
BACKEND_CORS_ORIGINS=http://localhost:5173,http://frontend:5173

# ============================================================================
# TONE Format Configuration
# ============================================================================
USE_TONE=true
VALIDATION_MODE=false

# ============================================================================
# AI/LLM Configuration (FORCE FALLBACK FOR TESTING)
# ============================================================================
AI_FORCE_FALLBACK=true
SKILL_LLM_PROVIDER=heuristic

# Azure OpenAI (Leave empty for fallback mode)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_MODEL=
AZURE_OPENAI_API_VERSION=
AZURE_OPENAI_DEPLOYMENT_NAME=

# Featherless (Leave empty for fallback mode)
FEATHERLESS_API_KEY=
FEATHERLESS_MODEL=meta-llama/Meta-Llama-3.1-8B-Instruct
FEATHERLESS_BASE_URL=https://api.featherless.ai/v1

# OpenAI (Leave empty for fallback mode)
OPENAI_API_KEY=
OPENAI_MODEL=

# Ollama (Optional - local LLM)
OLLAMA_ENDPOINT=
OLLAMA_MODEL=

# ============================================================================
# Security & Authentication
# ============================================================================
SECRET_KEY=changeme-in-production
REFRESH_SECRET_KEY=changeme-in-production
DEMO_API_TOKEN=skoda-demo-token-2024

# ============================================================================
# Monitoring & Error Tracking
# ============================================================================
SENTRY_DSN=

# ============================================================================
# API Versions
# ============================================================================
API_VERSIONS=v1
DEFAULT_API_VERSION=v1

# ============================================================================
# Data Directories (Optional overrides)
# ============================================================================
SKODA_DATA_ROOT=/app/data
SKODA_VALIDATION_LOG_DIR=

# ============================================================================
# Notes
# ============================================================================
# - Set AI_FORCE_FALLBACK=true to disable all external AI calls (for testing)
# - Set SKILL_LLM_PROVIDER=heuristic for rule-based analysis only
# - When Azure keys are available, set AI_FORCE_FALLBACK=false and configure Azure settings
# - DEMO_API_TOKEN is required for API access (configured in docker-compose.yml)

